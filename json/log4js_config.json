{
    "appenders": {
        "console": {
            "type": "console",
            "layout": {"type": "pattern", "pattern": "%[[%d] [%p] %f{1} -%] %m"}
        },
        "trace": {
            "type": "logLevelFilter",
            "appender": "trace_file",
            "level": "all",
            "maxLevel": "debug"
        },
        "trace_file": {
            "type": "dateFile",
            "filename": "log/vents_linebot_debug.log",
            "layout": {"type": "pattern", "pattern": "[%d] [%p] %f{1} - %m"}
        },
        "info": {
            "type": "logLevelFilter",
            "appender": "info_file",
            "level": "info"
        },
        "info_file": {
            "type": "dateFile",
            "filename": "log/vents_linebot.log",
            "layout": {"type": "pattern", "pattern": "[%d] [%p] %f{1} - %m"}
        }
    },
    "categories": {
        "default": { "appenders": ["console", "info", "trace"], "level": "all", "enableCallStack": true }
    }
}